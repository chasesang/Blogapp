<h1><%= @post.title %></h1>
<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSL1vzy36QMG0a6iRhCMJEPJsaZB5QTP-1m_nTbEjrRFVxzIwSh"
alt ="Post Imagine" style="width:300px; height: 200px;"
<p><%= @post.body %></p>
<p>Category ID: <%= @post.category_id %></p>
<p>Category Name: <%= @post.category.name %></p>
<p>Created On: <%= standard_date_format(@post.created_at) %></p>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', post_path(@post),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>


<h2>Comments</h2>
<%= @comment.errors.full_messages.join(', ') %>
<%= form_for [@post, @comment] do |f| %>
  <%= f.text_area :body %>
  <%= f.submit %>
<% end %>
<hr>
<% @post.comments.each do |comment| %>
  <p>Comments: <%= comment.body %></p>
  <p><%= comment.user.first_name %></p>
  <%= link_to 'Delete', post_comment_path(@post, comment),
method: :delete,
data: { confirm: 'Are you sure?'} %>
<% end %>
